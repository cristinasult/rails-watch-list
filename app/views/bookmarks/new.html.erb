<h2>Add a new movie</h2>

<%= simple_form_for [@list, @bookmark] do |f| %>
  <div class="form-inputs">
    <%= f.input :comment %>
    <%= f.association :movie %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

<div>
  <%= link_to "Back to my list", lists_path %>
</div>
