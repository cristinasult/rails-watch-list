<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.1), rgba(0,0,0,0.1)), url('<%= cl_image_path @list.photo.key, height: 300, crop: :fill %>')">
  <%= @list.name %>
</div>


<div align="right" class="m-3">
  <%= link_to "Back to lists", lists_path, class: 'btn btn-secondary' %>
  <%= link_to "Add a new movie", new_list_bookmark_path(@list), class: 'btn btn-success' %>
</div>

<div align="center" class="m-3">
  <h2>Movies</h2>
  <div class="row">
      <% @list.bookmarks.each do |bookmark| %>
        <div class="col-sm-4">
          <div class="card" style="width: 18rem;">
          <img src="<%= bookmark.movie.poster_url%>" class="card-img-top" alt="movie image">
          <div class="card-body">
            <h5 class="card-title"><strong><%= bookmark.movie.title %></strong> â€¢ <%= bookmark.movie.rating %> <i class="fas fa-star star-yellow"></i></h5>
            <p class="card-text"><%= bookmark.movie.overview %></p>
            <p>"<%= bookmark.comment %>"</p>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
