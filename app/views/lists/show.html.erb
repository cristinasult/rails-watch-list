<div id="<%= dom_id @list %>">
  <p>
    <strong>Name:</strong>
    <%= @list.name %>
  </p>

</div>

<div>
  <%= link_to "Back to lists", lists_path, class: 'btn btn-link' %> |
  <%= link_to "Create a new list", new_list_path(@list), class: 'btn btn-link' %> |
</div>

<div class="mt-5">
  <h2>Movies</h2>

  <% @list.bookmarks.each do |bookmark| %>
    <div class="row">
      <div class="col">
        <%= bookmark.movie.title %>
        <%= bookmark.comment %>
      </div>
    </div>
    <hr>
  <% end %>
</div>
<%= link_to "Add a new movie", new_list_bookmark_path(@list), class: 'btn btn-link' %> |
